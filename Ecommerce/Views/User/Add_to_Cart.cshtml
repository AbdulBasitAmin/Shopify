
@model Ecommerce.Models.tbl_product

@{
    ViewBag.Title = "Add_to_Cart";
}

<h2>Add_to_Cart</h2>

@using (Html.BeginForm())
{

    <div class="container">
        <div class="row">
            <img src="@Url.Content(Model.pro_image)" style="width:200px" height="200px" />



        </div>

        <div class="col-lg-8 col-md-8 col-sm-8">
            <h2> PRODUCT NAME : @Model.pro_name</h2>
            <h2> PRODUCT PRICE : @Model.pro_price</h2>
            <h2> PRODUCT DESCRIPTION : @Model.pro_desc</h2>

            <input type="number" name="qty" value="0" id="qty" max="10" />

            <input type="submit" value="Submit" class="btn btn-default" />


        </div>

    </div>


}



